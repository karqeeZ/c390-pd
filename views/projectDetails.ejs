<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style_details.css">
  <link rel="stylesheet" href="/css/general.css">
  <title>
    <%= project.name %> - Johnson | Portfolio
  </title>
</head>

<body>
  <p class="scroll-watcher"></p>
  <%- include('partials/navbar') %>
    <div class="text-center custom-project-details">
      <h2 class="custom-project-title mt-4">
        <%= project.name %>
      </h2>
    </div>
    <section class="container my-3">
      <div class="desc-main">
        <p><%- project.descriptionOver %></p>
      </div>
    </section>
    <section class="container my-3">
      <div id="projectCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="5000"
        data-bs-pause="hover">
        <div class="carousel-inner">
          <% project.items.forEach((item, index)=> { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>" data-index="<%= index %>"
              data-description="<%= item.description %>">
              <% if (item.type==='image' ) { %>
                <img src="<%= item.src %>" class="d-block w-100" alt="Project Image <%= index + 1 %>">
                <% } else if (item.type==='video' ) { %>
                  <video id="projectVideo<%= index %>" src="<%= item.src %>" class="d-block w-100" controls
                    muted></video>
                  <% } %>
            </div>
            <% }) %>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <!-- Project Name -->


      <!-- Project Description (Outside of Carousel) -->
      <div class="container">
        <div id="itemDescription" class="custom-project-description">
          <!-- Initial description will be set by JavaScript -->
        </div>
      </div>

      <% if (project.link) { %>
        <div class="text-center">
          <a href="<%= project.link %>" class="custom-btn" target="_blank">View Project</a>
        </div>
        <% } %>
          <div class="desc-main">
            <p><%- project.description %></p>
          </div>
          <button class="btn-d" onclick="window.location.href='/projects'">Back</button>
    </section>
    <script src="/js/des-p.js"></script>
</body>
<%- include ('partials/footer') %>

</html>