<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Johnson_Chong_Portfolio_2024</title>
    <link rel="stylesheet" href="/css/style_project.css">
    <link rel="stylesheet" href="/css/general.css">
</head>

<body>
    <%- include ('partials/navbar') %>
        <h3 class="title-p text-center my-4">Projects</h3>

        <div class="container mb-5">
            <!-- Development Projects Section -->
            <div>
                <h3 class="header-p">Development</h3>
                <div class="row row-cols-1 row-cols-md-3 g-4 contain">
                    <% projects.forEach(project=> { %>
                        <% if (project.type==='development' ) { %>
                            <div class="col">
                                <a href="/projects/<%= project.id %>" class="card h-100 text-decoration-none">
                                    <div class="card-img-top"
                                        style="background-image: url('<%= project.items[0].src %>'); background-size: cover; height: 200px;">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= project.name %>
                                        </h5>
                                    </div>
                                </a>
                            </div>
                            <% } %>
                                <% }) %>
                </div>
            </div>

            <!-- Design Projects Section -->
            <div>
                <h3 class="header-p">Design</h3>
                <div class="row row-cols-1 row-cols-md-3 g-4 contain">
                    <% projects.forEach(project=> { %>
                        <% if (project.type==='design' ) { %>
                            <div class="col">
                                <a href="/projects/<%= project.id %>" class="card h-100 text-decoration-none">
                                    <div class="card-img-top"
                                        style="background-image: url('<%= project.items[0].src %>'); background-size: cover; height: 200px;">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= project.name %>
                                        </h5>
                                    </div>
                                </a>
                            </div>
                            <% } %>
                                <% }) %>
                </div>
            </div>
        </div>

        <script src="/js/filter-p.js"></script>
        <!-- <script src="/js/project_scroll.js"></script> -->
</body>

</html>